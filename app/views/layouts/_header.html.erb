<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t('base.app_name'), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t('view.header.Home'), root_path %></li>
        <li><%= link_to t('view.header.Help'), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t('view.header.Users'), users_path %></li>
          <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t('view.header.Profile'), current_user %></li>
                <li><%= link_to t('view.header.Settings'), edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li><%= link_to t('view.header.Log_out'), logout_path, method: :delete %></li>
              </ul>
            </li>
        <% else %>
          <li><%= link_to t('view.header.Login'), login_path %></li>
        <% end %>
        <% if I18n.locale == I18n.default_locale %>
          <li><%= link_to "日本語", { :locale=>'ja' } %></li>
        <% else %>
          <li><%= link_to "English", { :locale=>'en' } %></li>
        <%end%>
      </ul>
    </nav>
  </div>
</header>
